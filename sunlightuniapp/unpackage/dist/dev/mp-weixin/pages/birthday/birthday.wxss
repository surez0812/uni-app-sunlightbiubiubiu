.page-container {
  min-height: 100vh;
  background-color: #F8F9FA;
  padding-bottom: 40px;
}
.custom-nav {
  background-color: #F8F8F8;
  padding: 44px 16px 12px;
}
.custom-nav .nav-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  text-align: center;
  display: block;
}
.birthday-form {
  margin: 20px;
  background: #fff;
  padding: 24px;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}
.birthday-form .title {
  font-size: 24px;
  font-weight: 600;
  color: #333;
  margin-bottom: 8px;
}
.birthday-form .subtitle {
  font-size: 14px;
  color: #666;
  margin-bottom: 32px;
}
.birthday-form .form-group {
  margin-bottom: 32px;
}
.birthday-form .picker {
  margin-bottom: 20px;
}
.birthday-form .picker .picker-item .label {
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
  display: block;
}
.birthday-form .picker .picker-item .input-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 16px;
  background-color: #F8F9FA;
  border-radius: 8px;
  border: 1px solid #E9ECEF;
}
.birthday-form .picker .picker-item .input-display .placeholder {
  color: #ADB5BD;
}
.birthday-form .picker .picker-item .input-display .icon {
  font-size: 12px;
  color: #666;
}
.birthday-form .save-button {
  width: 100%;
  height: 48px;
  line-height: 48px;
  font-size: 16px;
  font-weight: 600;
  color: #fff;
  background-color: #4A90E2;
  border-radius: 8px;
  border: none;
}
.birthday-form .save-button:active {
  opacity: 0.9;
}

