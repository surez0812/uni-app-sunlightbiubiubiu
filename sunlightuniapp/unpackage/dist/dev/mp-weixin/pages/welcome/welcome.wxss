.page-container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}
.welcome-header {
  margin-bottom: 30rpx;
}
.welcome-header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.welcome-header .user-info {
  margin-top: 20rpx;
}
.welcome-header .user-info .subtitle, .welcome-header .user-info .date {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-top: 10rpx;
}
.bazi-info {
  margin-bottom: 30rpx;
}
.bazi-info .section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.bazi-info .section .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}
.bazi-info .section .pillars {
  display: flex;
  justify-content: space-around;
}
.bazi-info .section .pillars .pillar {
  text-align: center;
}
.bazi-info .section .pillars .pillar text {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}
.hourly-fortune {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}
.hourly-fortune .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}
.hourly-fortune .fortune-chart {
  width: 100%;
  height: 400rpx;
}
.hourly-fortune .fortune-chart .chart-container {
  display: flex;
  padding: 20rpx 0;
  min-width: 1200rpx;
}
.hourly-fortune .fortune-chart .fortune-bar {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 300rpx;
  padding: 0 10rpx;
}
.hourly-fortune .fortune-chart .fortune-bar .bar {
  width: 40rpx;
  background: #e0e0e0;
  margin-bottom: 10rpx;
  border-radius: 20rpx;
  transition: all 0.3s;
}
.hourly-fortune .fortune-chart .fortune-bar .bar.score-high {
  background: #ff4d4f;
}
.hourly-fortune .fortune-chart .fortune-bar .bar.score-medium {
  background: #ffa940;
}
.hourly-fortune .fortune-chart .fortune-bar .bar.score-low {
  background: #bae637;
}
.hourly-fortune .fortune-chart .fortune-bar .time-label {
  font-size: 24rpx;
  color: #666;
}
.hourly-fortune .fortune-chart .fortune-bar .score-label {
  font-size: 24rpx;
  color: #999;
}
.hourly-fortune .fortune-chart .fortune-bar .advice-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}
.advice-container .card {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.advice-container .card .card-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}
.advice-container .luck-card .luck-text {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}
.advice-container .advice-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}
.advice-container .advice-grid .advice-card .advice-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

