.page-container {
  padding: 30rpx;
  min-height: 100vh;
  background: #f8f9fa;
}
.welcome-header {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.welcome-header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 20rpx;
}
.welcome-header .user-info .subtitle, .welcome-header .user-info .date {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}
.bazi-info {
  margin-bottom: 30rpx;
}
.bazi-info .section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.bazi-info .section .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 20rpx;
}
.bazi-info .section .pillars {
  display: flex;
  justify-content: space-around;
}
.bazi-info .section .pillars .pillar {
  text-align: center;
}
.bazi-info .section .pillars .pillar text {
  display: block;
}
.bazi-info .section .pillars .pillar text:first-child {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}
.bazi-info .section .pillars .pillar text:last-child {
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 500;
}
.advice-container .card {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.advice-container .card .card-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}
.advice-container .luck-card {
  text-align: center;
  margin-bottom: 30rpx;
}
.advice-container .luck-card .luck-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #2c3e50;
}
.advice-container .hourly-fortune {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.advice-container .hourly-fortune .section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}
.advice-container .hourly-fortune .fortune-chart {
  width: 100%;
  height: 400rpx;
  white-space: nowrap;
}
.advice-container .hourly-fortune .fortune-chart .chart-container {
  display: inline-flex;
  padding: 20rpx 0;
  min-width: 100%;
  height: 360rpx;
}
.advice-container .hourly-fortune .fortune-chart .chart-container .fortune-bar {
  flex: 0 0 120rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 10rpx;
}
.advice-container .hourly-fortune .fortune-chart .chart-container .fortune-bar .bar-wrapper {
  width: 40rpx;
  height: 200rpx;
  margin-bottom: 10rpx;
  position: relative;
}
.advice-container .hourly-fortune .fortune-chart .chart-container .fortune-bar .bar-wrapper .bar {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  border-radius: 20rpx;
  transition: all 0.3s ease;
  min-height: 20rpx;
}
.advice-container .hourly-fortune .fortune-chart .chart-container .fortune-bar .bar-wrapper .bar.mood-excellent {
  background: linear-gradient(to top, #ff9a9e 0%, #fad0c4 99%, #fad0c4 100%);
}
.advice-container .hourly-fortune .fortune-chart .chart-container .fortune-bar .bar-wrapper .bar.mood-good {
  background: linear-gradient(120deg, #a1c4fd 0%, #c2e9fb 100%);
}
.advice-container .hourly-fortune .fortune-chart .chart-container .fortune-bar .bar-wrapper .bar.mood-normal {
  background: linear-gradient(to top, #a8edea 0%, #fed6e3 100%);
}
.advice-container .hourly-fortune .fortune-chart .chart-container .fortune-bar .bar-wrapper .bar.mood-quiet {
  background: linear-gradient(to top, #e6e9f0 0%, #eef1f5 100%);
}
.advice-container .hourly-fortune .fortune-chart .chart-container .fortune-bar .time-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}
.advice-container .hourly-fortune .fortune-chart .chart-container .fortune-bar .score-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}
.advice-container .hourly-fortune .fortune-chart .chart-container .fortune-bar .advice-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}
.advice-container .advice-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}
.advice-container .advice-grid .advice-card .advice-text {
  font-size: 28rpx;
  color: #2c3e50;
  line-height: 1.5;
}
.disclaimer {
  margin: 40rpx 0;
  padding: 20rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 8rpx;
}

