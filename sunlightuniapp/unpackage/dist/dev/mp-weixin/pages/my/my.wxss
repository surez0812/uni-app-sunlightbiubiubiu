.my-container {
  min-height: 100vh;
  background-color: #f8f9fa;
}
.my-container .user-info {
  background: #fff;
  padding: 40rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.my-container .user-info .user-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: linear-gradient(45deg, #007AFF, #5856D6);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}
.my-container .user-info .user-circle .initial {
  color: #fff;
  font-size: 48rpx;
  font-weight: 500;
}
.my-container .user-info .info {
  flex: 1;
}
.my-container .user-info .info .nickname {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
  display: block;
}
.my-container .user-info .info .desc {
  font-size: 28rpx;
  color: #666;
}
.my-container .menu-list {
  background: #fff;
  margin-top: 20rpx;
}
.my-container .menu-list .menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.my-container .menu-list .menu-item .item-text {
  font-size: 28rpx;
  color: #333;
}
.my-container .menu-list .menu-item .arrow {
  font-size: 28rpx;
  color: #999;
}
.my-container .menu-list .menu-item:active {
  background-color: #f8f9fa;
}
.my-container .menu-list .menu-item:last-child {
  border-bottom: none;
}

